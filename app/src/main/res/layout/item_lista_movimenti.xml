<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lytListaMovimenti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/txtMovId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtMovDataValuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:text=""
                android:textColor="#3F51B5"
                android:textSize="@dimen/txtDati"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMovImportoEntrata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:text=""
                android:textAlignment="textEnd"
                android:textColor="@color/colorEntrate"
                android:textSize="@dimen/txtDati" />

            <TextView
                android:id="@+id/txtMovImportoUscita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:text=""
                android:textAlignment="textEnd"
                android:textColor="@color/colorUscite"
                android:textSize="@dimen/txtDati" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtMovNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#3F51B5"
            android:textSize="@dimen/txtDati"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>